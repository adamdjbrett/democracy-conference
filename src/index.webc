---
layout: "layouts/base.webc"
---

<hero-block 
webc:nokeep
    :subtitle="design.hero.subtitle" 
    :title="design.hero.title" 
    :description="design.hero.description"
    :cta="design.hero.cta_text"
    :link="design.hero.cta_link">
</hero-block>


<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="text-uppercase fw-bold lead" @raw="design.about.vision"></h2>
                <h3 class="display-5 fw-bold mb-4" @raw="md(design.about.title)"></h3>
                <div class="rich-text lead" @raw="md(design.about.content)"></div>
            </div>
            <div class="col-md-5 offset-md-1">
                <div class="p-4 border-start border-4 about-quote">
                    <p class="fst-italic mb-0" @raw="md(design.about.quote)"></p>
                </div>
            </div>
        </div>
    </div>
</section>




<register :@design="design"></register>

<section id="schedule" class="py-5 bg-white" webc:if="event && event.schedule">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold display-5" 
        @raw="event.schedule_title || 'Event Schedule'"></h2>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="accordion accordion-flush shadow-sm" id="designSchedule">
                    <schedule-item 
                        webc:for="entry of event.schedule.filter(e => {
                            const now = new Date();
                            if(!e.end || !e.end.date) return true;
                            return new Date(e.end.date + 'T' + e.end.time) >= now;
                        })" 
                        webc:nokeep
                        :@item="entry" 
                        :@speakers="speakers">
                    </schedule-item>
                </div>
            </div>
        </div>
    </div>
</section>



<register :@design="design" webc:nokeep></register>

