<section id="hotels" class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4">Official Accommodations</h2>
        <div class="row g-4">
            <hotel-card webc:for="h of hotels.list" webc:nokeep
                :name="h.name" :desc="h.desc" :image="h.image" :link="h.link">
            </hotel-card>
        </div>
    </div>
</section>

<contact-regist :@design="design" webc:nokeep></contact-regist>

